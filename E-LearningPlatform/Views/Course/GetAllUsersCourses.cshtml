@model IEnumerable<Course>
@{
    ViewData["Title"] = "GetAllUsersCourses";
}


<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Courses</h3>
                <span class="breadcrumb"><a href="#">Home</a> > Our Courses</span>
            </div>
        </div>
    </div>
</div>

<div class="section trending">
    <div class="container">
        <ul class="trending-filter">
            <li>
                <a class="is_active" href="#!" data-filter="*">Show All</a>
            </li>
            <li>
                <a href="#!" data-filter=".1">Programming</a>
            </li>
            <li>
                <a href="#!" data-filter=".2">Networks</a>
            </li>
            <li>
                <a href="#!" data-filter=".3">Mobile Development</a>
            </li>
        </ul>
        <div class="row trending-box">
            @foreach(var iteam in  Model){
            <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 @iteam.CategoryId">
                <div class="item">
                    <div class="thumb">
                            <a asp-action="GetCourseDeatails" asp-route-id="@iteam.CourseId"><img src="/Images/prgramming.jpg" alt=""></a>
                        <span class="price">$@iteam.Price</span>
                    </div>
                    <div class="down-content">
                            <span class="category">@iteam.Category</span>
                        <h4>@iteam.CourseName</h4>
                        <a href="product-details.html"><i class="fa fa-shopping-bag"></i></a>
                    </div>
                </div>
            </div>
            }
        </div>
         
    </div>
</div>



