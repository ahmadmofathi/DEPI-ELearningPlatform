@model E_LearningPlatform.DataAccess.ViewModels.RequestVM

@{
    ViewData["Title"] = "Create Request";
}

<h1>Create Request</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Request.CourseId" class="control-label"></label>
                <select asp-for="Request.CourseId" class="form-control"
                        asp-items="@(Model.CourseList.Cast<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>())">
                </select>

                <span asp-validation-for="Request.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Request.Description" class="control-label"></label>
                <textarea asp-for="Request.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Request.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Request" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
